<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Motivational"
    android:orientation="vertical"
    android:background="#98F789">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:text="Motivational Quotes"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:gravity="center"/>

        <ImageView
            android:id="@+id/motivational1"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/shadow"
            android:elevation="30dp"
            android:src="@drawable/motivational1" />

        <ImageView
        android:id="@+id/motivational2"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow"
        android:layout_gravity="center"
        android:elevation="30dp"
        android:src="@drawable/motivational2" />
    <ImageView
        android:id="@+id/motivational3"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow"
        android:layout_gravity="center"
        android:elevation="30dp"
        android:src="@drawable/motivational3" />
    <ImageView
        android:id="@+id/motivational4"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow"
        android:layout_gravity="center"
        android:elevation="30dp"
        android:src="@drawable/motivational4" />
    <ImageView
        android:id="@+id/motivational5"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shadow"
        android:layout_gravity="center"
        android:elevation="30dp"
        android:src="@drawable/motivational5" />

    </LinearLayout>


</ScrollView>