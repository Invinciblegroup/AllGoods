<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/app_bar"
    android:background="#98F789"
    tools:context=".Sidebar">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AllGoods.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.AllGoods.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:elevation="20dp"
                android:shadowColor="@color/red"
                android:text="Categories"
                android:textColor="@color/black"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/emotional"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shadow"
                android:elevation="20dp"
                android:src="@drawable/emotional" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                android:elevation="40dp"
                android:text="Emotional"
                android:textColor="#ffffff"
                android:textSize="30sp" />


            <ImageView
                android:id="@+id/motivational"
                android:layout_width="340dp"
                android:layout_height="180dp"
                android:layout_marginTop="50dp"
                android:elevation="20dp"
                android:padding="1dp"
                android:src="@drawable/motiva" />

            <ImageView
                android:id="@+id/videos"
                android:layout_width="340dp"
                android:layout_height="160dp"
                android:layout_marginTop="40dp"
                android:elevation="20dp"
                android:padding="1dp"
                android:src="@drawable/vidlogo" />

            <ImageView
                android:id="@+id/music"
                android:layout_width="340dp"
                android:layout_height="160dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:elevation="40dp"
                android:padding="1dp"
                android:src="@drawable/musiclogo" />

        </LinearLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>